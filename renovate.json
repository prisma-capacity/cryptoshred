{
  "extends": [
    "config:base",
    ":automergeMinor",
    ":label(ready)"
  ],
  "stabilityDays": 1,
  "prCreation": "immediate",
  "packageRules": [
    {
      "updateTypes": [
        "major"
      ],
      "masterIssueApproval": true
    },
    {
      "languages": [
        "js"
      ],
      "enabled": false,
      "recreateClosed": false
    },                                                                                                                                                                                      
     {                                                                                                                                                                                       
       "matchUpdateTypes": ["minor", "patch", "pin", "digest"],                                                                                                                              
       "automerge": true                                                                                                                                                                     
     },                                                                                                                                                                                      
     {                                                                                                                                                                                       
       "matchDepTypes": ["devDependencies"],                                                                                                                                                 
       "automerge": true                                                                                                                                                                     
     }             
  ],
  "labels": [
    "dependencies"
  ]

}
